# MySQL Docker Development Environment
FROM mysql:8.0

# Environment variables
ENV MYSQL_ROOT_PASSWORD=root123
ENV MYSQL_DATABASE=ecommerce_db  
ENV MYSQL_USER=ecommerce_user
ENV MYSQL_PASSWORD=ecommerce_pass

# Copy initialization scripts
COPY ./database/*.sql /docker-entrypoint-initdb.d/

# Expose MySQL port
EXPOSE 3306

# The mysql image will automatically run the scripts in /docker-entrypoint-initdb.d/
